{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2017",
    "skipLibCheck": true,
    "strict": true,
    "types": ["jest"]
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["./**/*", "../jest.config.js"],
  "exclude": ["node_modules"]
}
